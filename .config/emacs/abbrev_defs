(define-abbrev-table 'global-abbrev-table
  '(
    ("cljbuild" "(ns build
  (:require [clojure.tools.build.api :as b]))

(def lib 'id/foobar)
(def version \"0.0.1\")
(def basis (delay (b/create-basis)))
(def src-dirs [\"src\"])
(def target-dir \"target\")
(def class-dir (format \"%s/classes\" target-dir))
(def uber-file (format \"%s/%s.jar\" target-dir (name lib)))

(defn clean [& args]
  (b/delete {:path target-dir}))

(defn uberjar [& args]
  (clean)
  (b/copy-dir {:target-dir class-dir
               :src-dirs src-dirs})
  (b/write-pom {:basis @basis
                :class-dir class-dir
                :lib lib
                :version version
                :src-dirs src-dirs})
  (b/compile-clj {:basis @basis
                  :class-dir class-dir
                  :src-dirs src-dirs})
  (b/uber {:uber-file uber-file
           :class-dir class-dir
           :basis @basis
           :main 'foobar.main}))
" nil :count 5)
